<p id="notice"><%= notice %></p>

<h1>Listing Cohorts</h1>

<%= link_to 'New Cohort', new_cohort_path, class: "btn btn-default" %>
<br><br>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Campus</th>
      <th>Date</th>
      <th>Instructor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cohorts.each do |cohort| %>
      <tr>
        <td><%= cohort.name.titleize %></td>
        <td><%= cohort.campus.titleize %></td>
        <td><%= cohort.cohort_date %></td>
        <td><%= cohort.instructor.titleize %></td>
        <td><%= link_to 'Show', cohort, class: "btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_cohort_path(cohort), class: "btn btn-default" %></td>
        <td><%= link_to 'Destroy', cohort, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


