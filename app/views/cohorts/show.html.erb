<p id="notice"><%= notice %></p>

<p>
  <strong>Cohort Name:</strong>
  <%= @cohort.name.titleize %>
</p>

<p>
  <strong>Campus:</strong>
  <%= @cohort.campus.titleize %>
</p>

<p>
  <strong>Date:</strong>
  <%= @cohort.cohort_date %>
</p>

<p>
  <strong>Instructor:</strong>
  <%= @cohort.instructor.titleize %>
</p>

<%= link_to 'Edit', edit_cohort_path(@cohort), class: "btn btn-default" %>
<%= link_to 'Back', cohorts_path, class: "btn btn-default" %>

<h3>Graduates of <%= @cohort.name.titleize %></h3>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Current Title</th>
      <th>Current Employer</th>
      <th>Graduation Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name.titleize %></td>
        <td><%= user.last_name.titleize %></td>
        <td><%= user.email %></td>
        <td><%= user.current_title.titleize if user.current_title %></td>
        <td><%= user.current_employer.titleize if user.current_employer %></td>
        <td><%= user.friendly_grad_date if user.graduation_date %></td>
        <td><%= link_to 'Show', user, class: "btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-default" %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %></td>
      </tr>
    <% end %>
  </tbody>
</table>


