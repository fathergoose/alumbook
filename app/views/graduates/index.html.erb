<p id="notice"><%= notice %></p>

<h1>Listing Graduates</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Current title</th>
      <th>Current employer</th>
      <th>Graduation date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @graduates.each do |graduate| %>
      <tr>
        <td><%= graduate.first_name %></td>
        <td><%= graduate.last_name %></td>
        <td><%= graduate.email %></td>
        <td><%= graduate.phone %></td>
        <td><%= graduate.current_title %></td>
        <td><%= graduate.current_employer %></td>
        <td><%= graduate.graduation_date %></td>
        <td><%= link_to 'Show', graduate %></td>
        <td><%= link_to 'Edit', edit_graduate_path(graduate) %></td>
        <td><%= link_to 'Destroy', graduate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

